<Window x:Class="BackupSystemTool.ClosingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Close Application" Height="150" Width="300" ResizeMode="NoResize">
    <Grid>
        <TextBlock Text="Are you sure you want to close the application?" TextWrapping="Wrap" Margin="10"/>
        <TextBlock Text="(This will stop any running schedules)" TextWrapping="Wrap" Margin="10,30,10,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
            <Button Name="CloseButton" Content="Close" Margin="5" Click="CloseButton_Click"/>
            <Button Name="BackgroundButton" Content="Keep Runining in Background" Margin="5" Click="BackgroundButton_Click"/>
            <Button Name="CancelButton" Content="Cancel" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
