<Window x:Class="BackupSystemTool.DatabaseTester"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BackupSystemTool"
        mc:Ignorable="d"
        Title="DatabaseTester" Height="400" Width="400">
    <Grid>
        <StackPanel>
            <TextBox x:Name="databaseNameTextBox" Margin="10"/>
            <TextBox x:Name="databaseConnection" Margin="10"/>
            <Button x:Name="addConnectionButton" Content="Add Connection"
                    Click="addConnectionButton_Click" Margin="10"/>
            <Button x:Name="ConnectionPageButton" Content="Connections Page"
                    Click="ConnectionPageButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
